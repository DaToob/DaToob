{% extends "_layout.twig" %}

{% block title %}{{ query }}{% endblock %}

{% set le_url = 'results.php?search='~ query ~'&page=%s' %}

{% block content %}
    <table width="100%" align="center" cellpadding="0" cellspacing="0" border="0" bgcolor="#CCCCCC">
        <tbody>
        <tr>
            <td><img src="/img/box_login_tl.gif" width="5" height="5"></td>
            <td width="100%"><img src="/img/pixel.gif" width="1" height="5"></td>
            <td><img src="/img/box_login_tr.gif" width="5" height="5"></td>
        </tr>
        <tr>
            <td><img src="/img/pixel.gif" width="5" height="1"></td>
            <td>

                <div class="moduleTitleBar">
                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                        <tr valign="top">
                            <td>
                                <div class="moduleTitle">Search // {{ query }}</div>
                            </td>
                            <td align="right">
                                <div style="font-weight: color: #444; margin-right: 5px;">
                                    Results <b>1-10</b> of <b>{{ count }}</b> for <b>'{{ query }}'</b>. (<b>{{ duration }}</b>
                                    seconds)
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                {% for video in videos %}
                    <div class="moduleEntry">
                        <table width="100%" cellpadding="0" cellspacing="0" border="0">
                            <tbody>
                            <tr valign="top">
                                <td>
                                    <table cellpadding="0" cellspacing="0" border="0">
                                        <tbody>
                                        <tr>
                                            <td><a href="watch.php?v={{ video.video_id }}&amp;search={{ query }}"><img
                                                            src="get_still.php?video_id={{ video.video_id }}&amp;still_id=1"
                                                            class="moduleEntryThumb" width="100" height="75"></a></td>
                                            <td><a href="watch.php?v={{ video.video_id }}&amp;search={{ query }}"><img
                                                            src="get_still.php?video_id={{ video.video_id }}&amp;still_id=2"
                                                            class="moduleEntryThumb" width="100" height="75"></a></td>
                                            <td><a href="watch.php?v={{ video.video_id }}&amp;search={{ query }}"><img
                                                            src="get_still.php?video_id={{ video.video_id }}&amp;still_id=3"
                                                            class="moduleEntryThumb" width="100" height="75"></a></td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </td>
                                <td width="100%">
                                    <div class="moduleEntryTitle"><a
                                                href="watch.php?v={{ video.video_id }}&amp;search={{ query }}">{{ video.title }}</a>
                                    </div>
                                    <div class="moduleEntryDescription">{{ video.description }}</div>
                                    <div class="moduleEntryTags">
                                        Tags // {% for tag in video.tags %}<a
                                            href="results.php?search={{ tag.name }}">{{ tag.name }}</a> : {% endfor %}
                                    </div>
                                    <div class="moduleEntryDetails">Added: {{ video.time|date("F j, Y") }} by <a
                                                href="profile.php?user={{ video.u_name }}">{{ video.u_name }}</a>
                                        <!-- (<a href="profile.php?user={{ video.u_name }}">10</a>) --></div>
                                    <div class="moduleEntryDetails">Views: {{ video.views }} |
                                        Comments: {{ video.comments }}</div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                {% else %}
                    No videos!
                {% endfor %}
                {{ pagination(count, glob_lpp, le_url, page) }}
            </td>
            <td><img src="/img/pixel.gif" width="5" height="1"></td>
        </tr>
        <tr>
            <td><img src="/img/box_login_bl.gif" width="5" height="5"></td>
            <td><img src="/img/pixel.gif" width="1" height="5"></td>
            <td><img src="/img/box_login_br.gif" width="5" height="5"></td>
        </tr>
        </tbody>
    </table>
{% endblock %}