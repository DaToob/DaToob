                                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                    <tbody>
                                    {% if log %}
                                        <tr valign="top">
                                            <td width="60%"
                                                style="border-right: 1px dashed #369; padding: 0px 10px 10px 10px; color: #444;">
