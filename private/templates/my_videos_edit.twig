{% extends "_layout.twig" %}

{% block title %}Edit video{% endblock %}

	{% block content %}
        <form name="uploadForm" id="uploadForm" method="post" action="my_videos_edit.php" enctype="multipart/form-data">
            <input type="hidden" name="vid_id" value="{{ video.video_id }}">
            <h2 style="margin-bottom: 0.5em;">Edit video</h2>
            <p>Enter the updated title and description of your video.</p>
            <h4 style="margin-bottom: 0.5em;">Title</h4>
            <input type="text" class="form-control form-long uploader-form" name="title"
                   value="{{ video.title }}">
            <br>
            <h4 style="margin-bottom: 0.5em;">Description</h4>
            <textarea class="form-control form-long uploader-form" name="desc" maxlength="2000"
                      form="uploadForm"
                      style="overflow:hidden;resize:none" rows="3">{{ video.description }}</textarea>
            <br>
            <br>
            <div class="right">
                <input class="button button-primary" type="submit" id="upload" name="upload"
                       value="Save">
            </div>
        </form>
    {% endblock %}
