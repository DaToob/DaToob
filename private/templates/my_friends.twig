{% extends "_layout.twig" %}
{% block title %}{{ name }}{% endblock %}
{% block content %}
    <table width="100%" align="center" cellpadding="0" cellspacing="0" border="0">
        <tbody><tr valign="top">
            <td style="padding-right: 15px;">

                <table width="100%" align="center" cellpadding="0" cellspacing="0" border="0" bgcolor="#CCCCCC">
                    <tbody><tr>
                        <td><img src="img/box_login_tl.gif" width="5" height="5"></td>
                        <td width="100%"><img src="img/pixel.gif" width="1" height="5"></td>
                        <td><img src="img/box_login_tr.gif" width="5" height="5"></td>
                    </tr>
                    <tr>
                        <td><img src="img/pixel.gif" width="5" height="1"></td>
                        <td>

                            <div class="watchTitleBar">
                                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                    <tbody><tr valign="top">
                                        <td><div class="watchTitle">My Friends</div></td>
                                        <td align="right">
                                            <div style="font-weight: bold; color: #444; margin-right: 5px;">
                                                Friends 1-(?) of {{ allFriends }}                </div>
                                        </td>
                                    </tr>
                                    </tbody></table>
                            </div>



                            {% for senderuser in senderFriends %}
                                <div class="moduleEntry">
                                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                        <tbody>
                                        <tr valign="top">
                                            <td><a href="profile.php?user={{ senderuser.u_name }}"><img
                                                            src="get_still.php?video_id={{ senderuser.latest_video.video_id }}"
                                                            class="moduleEntryThumb" width="120" height="90"></a></td>
                                            <td width="100%">
                                                <div class="moduleEntryTitle"><a
                                                            href="profile.php?user={{ senderuser.u_name }}">{{ senderuser.u_name }}</a></div>
                                                <div class="moduleEntryDetails">Added: {{ senderuser.time|date("F j, Y") }}</div>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            {% endfor %}
                            {% for receiveruser in receiverFriends %}
                                <div class="moduleEntry">
                                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                        <tbody>
                                        <tr valign="top">
                                            <td><a href="profile.php?user={{ receiveruser.u_name }}"><img
                                                            src="get_still.php?video_id={{ receiveruser.latest_video.video_id }}"
                                                            class="moduleEntryThumb" width="120" height="90"></a></td>
                                            <td width="100%">
                                                <div class="moduleEntryTitle"><a
                                                            href="profile.php?user={{ receiveruser.u_name }}">{{ receiveruser.u_name }}</a></div>
                                                <div class="moduleEntryDetails">Added: {{ receiveruser.time|date("F j, Y") }}</div>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            {% endfor %}


                            <!-- end paging -->
              {{ pagination(level_count, 5, "my_friends.php" ~ "?page=%s", pageNumber) }}
                        </td>
                        <td><img src="img/pixel.gif" width="5" height="1"></td>
                    </tr>
                    <tr>
                        <td><img src="img/box_login_bl.gif" width="5" height="5"></td>
                        <td><img src="img/pixel.gif" width="1" height="5"></td>
                        <td><img src="img/box_login_br.gif" width="5" height="5"></td>
                    </tr>
                    </tbody></table>

            </td>
            <td width="180">
                {% include "/components/friendslinks.twig" %}
            </td>
        </tr>
        </tbody></table>
{% endblock %}
