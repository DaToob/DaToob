                                {{ video.description }}
                                <div class="watchAdded" style="margin-top: 5px;">
                                </div>
                            </div>
                            <div class="watchTags">Tags //
                                {% for tag in tags %}
                                    <a href="results.php?search={{ tag.name }}">{{ tag.name }}</a> :
                                {% else %}
